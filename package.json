{
  "private": true,
  "scripts": {
    "precommit": "pretty-quick --staged",
    "commit": "git-cz",
    "lint": "ts-lint -p tsconfig.json -c tslint.json",
    "bootstrap": "lerna bootstrap",
    "test": "jest",
    "clean": "rimraf packages/**/lib",
    "pretty-quick": "pretty-quick"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/lodash.get": "^4.4.4",
    "@types/lodash.set": "^4.3.4",
    "@types/node": "^8.0.28",
    "@types/object-hash": "^1.2.0",
    "git-cz": "^1.7.1",
    "husky": "^0.14.3",
    "jest": "23.1.0",
    "jest-extended": "^0.11.0",
    "lerna": "^2.9.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0",
    "rimraf": "^2.6.2",
    "ts-jest": "22.4.6",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "typescript": "^3.0.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "setupTestFrameworkScriptFile": "jest-extended",
    "moduleNameMapper": {
      "@nest/server/(.*)": "<rootDir>/packages/server/src/$1",
      "@nest/core/(.*)": "<rootDir>/packages/core/src/$1",
      "@nest/(.*)": "<rootDir>/packages/$1/src"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/packages/*/__tests__/**/*.(spec|test).+(ts|tsx)"
    ]
  }
}
